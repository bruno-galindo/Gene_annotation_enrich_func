	month = aug,
	year = {2023},
	keywords = {genetic evaluation, heat tolerance, NASA POWER, Temperature-Humidity Index ()},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\galin\\Zotero\\storage\\XV7XBI68\\Rockett et al. - 2023 - Genetic evaluation of heat tolerance in Holsteins .pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\galin\\Zotero\\storage\\44H2J5JK\\S002203022300437X.html:text/html},
}

