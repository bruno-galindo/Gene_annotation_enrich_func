	number = {28},
	urldate = {2023-07-13},
	journal = {Proceedings of the National Academy of Sciences},
	author = {García-Ruiz, Adriana and Cole, John B. and VanRaden, Paul M. and Wiggans, George R. and Ruiz-López, Felipe J. and Van Tassell, Curtis P.},
	month = jul,
	year = {2016},
	file = {García-Ruiz et al. - 2016 - Changes in genetic selection differentials and gen.pdf:C\:\\Users\\galin\\Zotero\\storage\\DHFABWPJ\\García-Ruiz et al. - 2016 - Changes in genetic selection differentials and gen.pdf:application/pdf},
}

