	journal = {BMC Genomics},
	author = {Id-Lahoucine, Samir and Casellas, Joaquim and Suárez-Vega, Aroa and Fonseca, Pablo A. S. and Schenkel, Flavio S. and Sargolzaei, Mehdi and Cánovas, Angela},
